import java.awt.BasicStroke;
import java.awt.Color;
import java.awt.Graphics2D;
import java.awt.geom.Rectangle2D;
import java.util.ArrayList;
import java.util.Iterator;
import java.util.Random;

import javax.swing.border.StrokeBorder;

public class Alien extends Rectangle2D.Double
{
	
	private static final int PAS = 2;
	public static final int COTE = 40;
	int cptRobustesse, r;
	ArrayList<Integer> listeRobustesse;
	
	
	
	// constructeur
	public Alien(int centreX, int cptRobustesse)
	{
		super(centreX, 0, COTE, COTE);
		this.cptRobustesse = cptRobustesse;
		r = 0;
		listeRobustesse = new ArrayList<Integer>();
		
	}
	
	public Alien()
	{
		super();
	}
	
	// Pour avoir le rectangle autour du rond
	public boolean intersectAA(Alien a)
	{
		return intersects(a.getBounds2D());
	}
	

	// Pour descendre
	public void descendre()
	{
		super.y += PAS;
	}
	
	public void robustesse()
	{
		if(listeRobustesse.get(listeRobustesse.size() - 3) != listeRobustesse.get(listeRobustesse.size() - 2))
		{
			r = new Random().nextInt(cptRobustesse) + 1;
		}
				
	}
	
	/* Couleur Alien */
	public void paint(Graphics2D g2)
	{
		// permet aux Aliens de prendre une Ã©paisseur random
		if(cptRobustesse != 0)
			robustesse();
		System.out.println("robustesse " + cptRobustesse + " random " + r);
		g2.setStroke(new BasicStroke(r));
		g2.setColor(Color.GREEN);
		g2.draw(this);
	}
	
}