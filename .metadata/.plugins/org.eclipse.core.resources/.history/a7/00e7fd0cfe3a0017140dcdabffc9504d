/** Permet de stocker les information sur un joueur*/
public class Joueur {
	String pseudo;
	int score, nb;
	
	Joueur()
	{
		score = 0;
		nb++;
		pseudo = "Joueur " + String.valueOf(nb);
		System.out.println(pseudo);
	}
	
	Joueur(String p)
	{
		pseudo = p;
		score = 0;
	}
	
	public int getScore(ListeMissile l)
	{
		return l.getScore();
	}
	
	public String toString()
	{
		StringBuffer buf = new StringBuffer();
		buf.append(pseudo);
		buf.append(" ");
		buf.append(score);
		return buf.toString();
	}
}
